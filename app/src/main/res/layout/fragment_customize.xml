<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vclab.moodlightshare.Fragment.FragmentCustomize">

    <Button
        android:id="@+id/CustomizeShareButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="Button" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/customize_color_display"
                android:layout_width="60dp"
                android:layout_height="43dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="8dp"
                android:layout_weight="0"
                android:background="#000000" />

            <Space
                android:id="@+id/space"
                android:layout_width="10dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/customize_color_display"
                android:layout_weight="0" />

            <ImageView
                android:id="@+id/customzie_spectrum_image"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/space"
                android:layout_weight="0"
                android:src="@drawable/line_spectrum" />

        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" />
        </HorizontalScrollView>

    </LinearLayout>

</RelativeLayout>
